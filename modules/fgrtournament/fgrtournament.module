/**
 * Implements hook_block_view().
 *
 * Prepares the contents of the block.
 */
/**
 * Implements hook_node_view().
 */
function fgrtournament_node_view($node, $view_mode, $langcode)
{
    switch ($node->type) {
        case 'fgrtournament':
            $node->content['extra_link'] = array(
                '#weight' => 10,
                '#theme' => 'link',
                '#path' => 'path',
                '#text' => t('An extra link'),
                '#options' => array(
                    'attributes' => array(),
                    'html' => FALSE
                ),
            );
            break;
    }
}
